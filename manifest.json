{
  "manifest_version": 3,
  "name": "Basic Calculator",
  "description": "A clean popup calculator (no permissions needed)",
  "permissions": ["scripting", "activeTab"],
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Open Calculator",
    "default_icon": {
      "16": "/calculator.png",
      "48": "/calculator.png",
      "128": "/calculator.png"
    }
  },
  "icons": {
    "16": "/calculator.png",
    "48": "/calculator.png",
    "128": "/calculator.png"
  }
}